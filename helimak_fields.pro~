PRO HELIMAK_FIELDS

; base widget
base = widget_base(title='Vacuum Magnetic Fields in Helimak', /column)

;plot
draw = widget_draw (base, xsize=550, ysize = 400)

; parameters
win1 = widget_base(base, /row)
win2 = widget_base(base, column=2)

win3 = widget_base(base, /row)



shot = cw_field(win1, /return_events, title="Shot Number", uname ='shot_widget', uvalue='shot_widget',VALUE='140606001')
print_shot = widget_button(win1, uname='print_shot', value='Print Shot', xsize=75)

current_label = widget_label(win2, uname='current_label', VALUE= 'Current')
current_t = cw_field(win2,  /return_events, title="Toroidal Coils", uname ='current_t_widget', uvalue='current_t_widget',VALUE='1000')


widget_control, base, /realize

return
end

